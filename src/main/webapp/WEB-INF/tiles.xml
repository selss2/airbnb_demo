<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<!-- 페이지 템플릿(레이아웃)과 템플릿을 구성하는 각 부분을 모두 이름을 붙여 선언한다 -->
	<definition name="public" template="/WEB-INF/views/layouts/public.jsp">
		<put-attribute name="title" value="에어비앤비"></put-attribute>
		<put-attribute name="header" value="/WEB-INF/views/public/header.jsp" />
		<put-attribute name="body" value=""></put-attribute>
		<put-attribute name="footer" value="/WEB-INF/views/public/footer.jsp" />
	</definition>
	<definition name="public:*/*.tiles" extends="public">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>

	<!-- 가이드 타일즈 -->
	<definition name="guide" template="/WEB-INF/views/layouts/guide.jsp">
		<put-attribute name="title" value="가이드북"></put-attribute>
		<put-attribute name="header" value="/WEB-INF/views/public/header.jsp" />
		<put-attribute name="g_header" value="/WEB-INF/views/guide/header.jsp" />
		<put-attribute name="sidenav" value="/WEB-INF/views/guide/sidenav.jsp" />
		<put-attribute name="body" value=""></put-attribute>
		<put-attribute name="footer" value="/WEB-INF/views/guide/footer.jsp" />
	</definition>
	<definition name="guide:*/*.tiles" extends="guide">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>

	<!-- 가이드 북 화면 타일즈 -->
	<definition name="guidebook" template="/WEB-INF/views/layouts/guidebook.jsp">
		<put-attribute name="title" value="가이드북 화면"></put-attribute>
		<put-attribute name="header" value="/WEB-INF/views/public/header.jsp" />
		<put-attribute name="body" value=""></put-attribute>
	</definition>
	<definition name="guidebook:*/*.tiles" extends="guidebook">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>

	<!-- 노타일즈 -->
	<definition name="noTiles" template="/WEB-INF/views/layouts/noTemplate.jsp">
		<put-attribute name="noTemplate" value="" />
	</definition>
	<definition name="*.jsp" extends="noTiles">
		<put-attribute name="noTemplate" value="/WEB-INF/views/{1}.jsp" />
	</definition>
	<definition name="*/*.jsp" extends="noTiles">
		<put-attribute name="noTemplate" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>
	<definition name="*/*/*.jsp" extends="noTiles">
		<put-attribute name="noTemplate" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
	</definition>
</tiles-definitions>